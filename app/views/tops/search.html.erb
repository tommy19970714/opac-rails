<%= search_form_for @q, url: list_path do |f| %>
<div class="row justify-content-center">
    <img src="/assets/logo.png" id="logo">
    <div class="col-12 col-md-10 col-lg-8">
        <div class="card card-sm">
            <div class="card-body row no-gutters align-items-center">
            <i class="fa fa-search"></i>
                <div class="col-auto">
                    <i class="icon-magnifying-glass h4 text-body"></i>
                </div>
                <!--end of col-->
                <div class="col">
                    <%= f.search_field :tr_or_author_cont , class: "form-control form-control-lg form-control-borderless", placeholder: "Search topics or keywords" %>
                </div>
                <!--end of col-->
                <div class="col-auto">
                    <button class="btn btn-lg btn-success" type="submit">Search</button>
                </div>
                <!--end of col-->
            </div>
        </div>
    </div>
</div>
<% end %>

<center>
<br>
<a data-toggle="collapse" href="#detail" aria-expanded="false" aria-controls="detail">
    詳細検索
</a>
</center>

<%= search_form_for @q, url: list_path do |f| %>
<div id="detail" class="collapse">
    
    <%= f.label :tr_cont, "タイトル" %>
    <%= f.search_field :tr_cont, class:"form-control" %>

    <%= f.label :tr, "フルタイトル" %>
    <%= f.search_field :tr , class:"form-control" %>

    <%= f.label :tr, "著者名" %>
    <%= f.search_field :author_cont , class:"form-control" %>

    <%= f.label :tr, "出版社" %>
    <%= f.search_field :publisher_cont , class:"form-control" %>

    <%= f.label :tr, "ISBN" %>
    <%= f.search_field :isbn , class:"form-control" %>

    <%# 検索ボタン %>
    <%= f.submit class:"btn btn-success" %>
</div>
<% end %>
